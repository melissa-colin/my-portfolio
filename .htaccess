# Définir les types MIME corrects pour tous les fichiers JavaScript
<IfModule mod_mime.c>
  AddType application/javascript .js .mjs .jsx
  AddType text/css .css
  AddType application/json .json
  AddType text/html .html .htm
</IfModule>

# Désactiver temporairement l'en-tête X-Content-Type-Options pour déboguer
<IfModule mod_headers.c>
  Header unset X-Content-Type-Options
</IfModule>

# Redirection vers index.html pour SPA
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>
