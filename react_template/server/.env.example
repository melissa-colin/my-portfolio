# Server Environment Variables
# Rename this file to .env and add your values

# Server port
PORT=5000

# MongoDB Connection URL
MONGO_URI=mongodb://localhost:27017/portfolio_cms
# or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/portfolio_cms

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Admin user (created on first startup if no users exist)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=securepassword
ADMIN_NAME=Administrator